        </div>
        <div class="removeProduct">
            <h3>Remove User</h3>
            
            
                <form action="/admin/adminProduct/delete" method="POST">
                    <select name="deleteProduct" id="">
                    <option value="">--Que souhaitez vous supprimer--</option>
                    <% for(let element of productOnLoad){ %>
                        <option value="<%= element.name %>"><%= element.name %></option>
                    <% } %>
                    </select>
